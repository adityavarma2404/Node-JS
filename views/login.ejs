<%- include('includes/head.ejs') %>
</head>
<body>
    <div class="login-container">
        <h1>Login</h1>
        <form action="/auth/login" method="POST">
            <label for="email">Email:</label><br>
            <input class="<%= errorValidations.find(i => i.path === 'email') ? 'invalid' : '' %>" type="text" id="email" name="email" value="<%= oldInput.email %>" >
            <br>
            <br>
            <label for="password">Password:</label><br>
            <input class="<%= errorValidations.find(i => i.path === 'password') ? 'invalid' : '' %>" type="password" id="password" name="password" value="<%= oldInput.password%>" >
            <br>
            <br>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button>Login</button>
        </form>
        <div class="helpers-container">
            <a href="/auth/reset">Forgot password?</a>
            <a href="/auth/signup">Not a user? signup here</a>
        </div>
        <% if(errorMessage){ %>
            <div class="error-container"><%= errorMessage %></div>
        <% } %>
    </div>

<%- include('includes/end.ejs') %>