<%- include('includes/head.ejs') %>
</head>
<body>
    <div class="login-container">
        <form action="/auth/signup" method="POST">
            <label for="email">Email:</label><br>
            <input class="<%= errorValidations.find(i => i.path === 'email') ? 'invalid' : '' %>" type="text" id="email" name="email" value="<%= oldData.email %>" >
            <br>
            <br>
            <label for="password">Password:</label><br>
            <input class="<%= errorValidations.find(i => i.path === 'password') ? 'invalid' : '' %>" type="password" id="password" name="password" value="<%= oldData.password %>" >
            <br>
            <br>
            <label for="cPassword">Confirm Password:</label><br>
            <input class="<%= errorValidations.find(i => i.path === 'cPassword') ? 'invalid' : '' %>" type="password" id="cPassword" name="cPassword" value="<%= oldData.cPassword %>" >
            <br>
            <br>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button>Signup</button>
        </form>
        <div class="helpers-container">
            <a href="/auth/login">Already a user? login here</a>
        </div>
        <% if(errorMessage){ %>
            <div class="error-container"><%= errorMessage %></div>
        <% } %>
        <% if(feedback){ %>
            <div class="feedback-container"><%= feedback %></div>
        <% } %>
    </div>

<%- include('includes/end.ejs') %>